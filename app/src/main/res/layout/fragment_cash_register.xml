<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cashRegisterFragment">

    <TextView
        android:id="@+id/textCashRegisterSum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cash_register_sum"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textCashRegisterSumResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/zero"
        app:layout_constraintStart_toEndOf="@+id/textCashRegisterSum"
        app:layout_constraintTop_toTopOf="@+id/textCashRegisterSum" />

</androidx.constraintlayout.widget.ConstraintLayout>